* {box-sizing: border-box;}

body { 
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
  background-image: url("art.png");
  background-repeat: no-repeat;
  background-size: cover;
  
}

.header {
  overflow: hidden;
  #background-color:EDFC04;
  padding: 10px 5px;
}

.header a {
  float: left;
  color: black;
  text-align: center;
  padding: 12px;
  text-decoration: none;
  font-size: 18px; 
  line-height: 25px;
  border-radius: 4px;
}

.header a.logo {
  height: 100px;
  width: 100px;
}

.header img {
  float: left;
  width: 160px;
  height: 85px;
  background: #000000;
  max-width: 100%
  #margin-left: auto;
}

.header a:hover {
  background-color: #ddd;
  color: black;
}

.header a.active {
  background-color: grey;
  color: white;
}

.header-right {
  float: right;
}

@media screen and (max-width: 1000px) {
  .header a {
    float: none;
    display: block;
    text-align: left;
  }
  
  .header-right {
    float: none;
  }
}
